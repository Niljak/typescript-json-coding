{
    "compilerOptions": {
        "lib": ["ES7"],
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "outDir": "build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/test/**/*"]
}
